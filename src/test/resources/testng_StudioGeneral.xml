<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="craftercms - Studio UI -GeneralTestCases TestSuite"
	preserve-order="true" verbose="3">
	<test name="ChangeStateOfPreviousPublishedContent" preserve-order="true">
		<classes>
			<class
				name="org.craftercms.studio.test.cases.sitestestcases.CreateSiteWithWebSiteEditorialBluePrintTest" />
			<class
				name="org.craftercms.studio.test.cases.generaltestcases.ChangeStateOfPreviousPublishedContent" />
			<class
				name="org.craftercms.studio.test.cases.sitestestcases.DeleteSiteTest" />
			<class
				name="org.craftercms.studio.test.cases.userstestcases.DeleteUserTest" />
		</classes>
	</test>
	<test name="Crafter3LoadTest" preserve-order="true">
		<classes>
			<class
				name="org.craftercms.studio.test.cases.sitestestcases.CreateSiteWithWebSiteEditorialBluePrintTest" />
			<class
				name="org.craftercms.studio.test.cases.generaltestcases.Crafter3LoadTest1Script">
				<methods>
					<include name="crafter3LoadTestTestUser1" />
				</methods>
			</class>
			<class
				name="org.craftercms.studio.test.cases.sitestestcases.DeleteSiteTest" />
		</classes>
	</test>
	<test name="RenameParentPageAndPublishChildTest" preserve-order="true">
		<classes>
			<class
				name="org.craftercms.studio.test.cases.sitestestcases.CreateSiteWithWebSiteEditorialBluePrintTest" />
			<class
				name="org.craftercms.studio.test.cases.generaltestcases.RenameParentPageAndPublishChildTest" />
			<class
				name="org.craftercms.studio.test.cases.sitestestcases.DeleteSiteTest" />
		</classes>
	</test>
	<test name="Verify that no errors with BluePrints are displayed when create sites" preserve-order="true">
		<classes>
			<class
				name="org.craftercms.studio.test.cases.generaltestcases.VerifyThatNoBluePrintErrorsDisplayedWhenCreateSite" />
		</classes>
	</test>
	<test
		name="Verify The application allows to delete a page or component and the change is reflected on delivery">
		<classes>
			<class
				name="org.craftercms.studio.test.cases.sitestestcases.CreateSiteWithWebSiteEditorialBluePrintTestForDeliveryCheck" />
			<class
				name="org.craftercms.studio.test.cases.contenttestcases.AddNewContentAndPublishContentTest" />
			<class
				name="org.craftercms.delivery.test.cases.verification.VerifyThatPageIsOnLive" />
			<class
				name="org.craftercms.studio.test.cases.contenttestcases.DeleteDeliveryContentPageTest" />
			<class
				name="org.craftercms.delivery.test.cases.verification.VerifyThatPageIsNotOnLive" />
			<class
				name="org.craftercms.studio.test.cases.sitestestcases.DeleteSiteTest" />
		</classes>
	</test>
</suite> <!-- Suite -->