<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="craftercms - Studio Sites TestSuite"
	preserve-order="true" verbose="3">
	<test
		name="Verify that application allows to create a site based on a blueprint then push to remote git repository">
		<classes>
			<class
				name="org.craftercms.studio.test.cases.sitestestcases.VerifyStudioAllowsToCreateSiteBasedOnBluePrintThenPushToRemoteGitRepoTest" />
			<class
				name="org.craftercms.studio.test.cases.sitestestcases.DeleteSiteTest" />
		</classes>
	</test>
	<test
		name="Verify that the application allows to create a site based on a remote git repository -Authentication type: none">
		<classes>
			<class
				name="org.craftercms.studio.test.cases.sitestestcases.VerifyStudioAllowsToCreateASiteBasedOnARemoteGitRepositoryWithNoneAuthenticationTypeTest" />
			<class
				name="org.craftercms.studio.test.cases.sitestestcases.DeleteSiteTest" />
		</classes>
	</test>
	<test
		name="Verify that the application allows to create a site based on a remote git repository -Authentication type: basic">
		<classes>
			<class
				name="org.craftercms.studio.test.cases.sitestestcases.VerifyStudioAllowsToCreateASiteBasedOnARemoteGitRepositoryWithBasicAuthenticationTypeTest" />
			<class
				name="org.craftercms.studio.test.cases.sitestestcases.DeleteSiteTest" />
		</classes>
	</test>
	<test
		name="Verify that the application allows to create a site based on a remote git repository -Authentication type: token">
		<classes>
			<class
				name="org.craftercms.studio.test.cases.sitestestcases.VerifyStudioAllowsToCreateASiteBasedOnARemoteGitRepositoryWithTokenAuthenticationTypeTest" />
			<class
				name="org.craftercms.studio.test.cases.sitestestcases.DeleteSiteTest" />
		</classes>
	</test>
	<test
		name="Verify that the application allows to create a site based on a remote git repository -Authentication type: private key on local repository">
		<classes>
			<class
				name="org.craftercms.studio.test.cases.sitestestcases.VerifyStudioAllowsToCreateASiteBasedOnARemoteGitRepositoryWithPrivateKeyAuthenticationTypeOnLocalRepositoryTest" />
			<class
				name="org.craftercms.studio.test.cases.sitestestcases.DeleteSiteTest" />
		</classes>
	</test>
	<test
			name="Automate verification that the application allows to create a site with Link to upstream remote git repository (git, gitlab) -Authentication type: basic">
		<classes>
			<class
					name="org.craftercms.studio.test.cases.sitestestcases.VerifyStudioAllowsToCreateASiteWithLinkToUpstreamRemoteGitRepoWithBasicAuthenticationTypeTest" />
		</classes>
	</test>
	<test
	name="Automate verification that the application allows to create a site with Link to upstream remote git repository (git, gitlab) -Authentication type: Remote Git Repository Private Key">
		<classes>
			<class
				name="org.craftercms.studio.test.cases.sitestestcases.VerifyStudioAllowsToCreateASiteWithLinkToUpstreamRemoteGitRepoWithPrivateKeyAuthenticationTypeTest" />
			<class
				name="org.craftercms.studio.test.cases.sitestestcases.DeleteSiteTest" />
		</classes>
	</test>
	<test
		name="Verify that Studio allows to add a remote repository for the site and to push and pull from the remote repo">
		<classes>
			<class
				name="org.craftercms.studio.test.cases.sitestestcases.CreateSiteEmptyTest" />
			<class
				name="org.craftercms.studio.test.cases.siteconfigtestcases.VerifyThatStudioAllowsToAddRemoteRepositoryAndPushAndPullFromRemoteTest" />
			<class
				name="org.craftercms.studio.test.cases.sitestestcases.DeleteSiteTest" />
		</classes>
	</test>
	<test
	name="Automate verification of create site after a failed create site with link to upstream remote git repository (With Basic Auth)">
		<classes>
			<class
				name="org.craftercms.studio.test.cases.sitestestcases.VerifyStudioAllowsToCreateASiteAfterAFailedCreateSiteWithLinkUpstreanRemoteGitRepoWithBasicAuthTest" />
			<class
				name="org.craftercms.studio.test.cases.sitestestcases.DeleteSiteTest" />
		</classes>
	</test>
</suite> <!-- Suite -->